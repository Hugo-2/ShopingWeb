@model IEnumerable<ProductosVM>

@{
    ViewData["Title"] = "Plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<div class="fst-italic">Market/Recordatorio</div>
*@

<div class="container">
    <div class="row">
        <div class="col-7 text-center">
            <img src="/image/shopingList_1.jpg" class="w-50" />
            <h1 class="display-4 mt-1">Shoping List</h1>
        </div>
        <div class="col text-center align-self-end">
            <a asp-action="AddProducto" class="btn btn-success"><i class="bi bi-plus-lg"> ADD product</i></a>
        </div>
    </div>
</div>

<div class="border border-1 border-success mt-3 mb-3 shadow-lg "></div>

<div class="container">
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th class="text-center">Amount</th>
                <th>Market</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Producto</td>
                    <td class="text-center">@producto.Cantidad</td>
                    <td>@producto.Tienda</td>
                    <td class="text-center"> <a asp-action="EditarRecordatorio" asp-route-idProductoLista="@producto.Id" class="btn bg-primary bg-opacity-25"><i class="bi bi-pencil-fill"></i></a></td>
                </tr>

            }
        </tbody>
    </table>
</div>